<!DOCTYPE html>
<html lang="en">
<head><meta charset="utf-8"><title>Voice Button</title></head>
<body>
<div id="vapi-button"></div>

<script>
  const assistant = "04679032-2b78-446c-9a95-bfc719ef7a66";               // your Assistant ID
  const apiKey    = "pk_live_414f3957-a9b2-4140-9423-4a10cabf4761";       // your public key
  const buttonConfig = { style: { color: "#ffffff", background: "#28a745" } };

  (function(d,t){
     const g = d.createElement(t), s = d.getElementsByTagName(t)[0];
     g.src   = "https://cdn.jsdelivr.net/gh/VapiAI/html-script-tag@latest/dist/assets/index.js";
     g.defer = g.async = true;
     s.parentNode.insertBefore(g,s);
     g.onload = () => window.vapiSDK.run({
       selector:"#vapi-button",
       apiKey, assistant, config:buttonConfig
     });
  })(document,"script");
</script>
</body>
</html>
